#include <stdio.h>

int main() {
    char texto[100];
    int i = 0, comprimento = 0;

    printf("Digite uma string: ");
    fgets(texto, sizeof(texto), stdin);

    while (texto[i] != '\0') {
        if (texto[i] != '\n') {
            comprimento++;
        }
        i++;
    }

    printf("A string possui %d caracteres (incluindo espacos).\n", comprimento);

    return 0;
}
